# ===========================================
# Curls & Contemplation - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# -------------------------------------------
# SITE CONFIGURATION
# -------------------------------------------
SITE_URL=https://curlsandcontemplation.com
# Release date for the eBook (pre-orders convert to downloads after this date)
# Format: ISO 8601 (e.g., 2026-03-15T16:00:00.000Z = March 15, 2026 at 10:00 AM CT)
RELEASE_DATE=2026-03-15T16:00:00.000Z

# -------------------------------------------
# STRIPE PAYMENTS (Required for checkout)
# -------------------------------------------
# Get these from: https://dashboard.stripe.com/apikeys
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_secret_key_here

# Webhook secret for verifying Stripe webhook signatures
# Get this when creating a webhook at: https://dashboard.stripe.com/webhooks
# Endpoint URL should be: https://yourdomain.com/api/stripe/webhooks
# Events to listen for: payment_intent.succeeded, charge.refunded
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# -------------------------------------------
# EMAIL - RESEND (Transactional emails)
# -------------------------------------------
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY=re_your_resend_api_key_here

# Email addresses for sending
FROM_EMAIL=hello@curlsandcontemplation.com
FROM_NAME=Curls & Contemplation

# -------------------------------------------
# EMAIL - MAILCHIMP (Marketing / Newsletter)
# -------------------------------------------
# Get these from: https://mailchimp.com/help/about-api-keys/
MAILCHIMP_API_KEY=your_mailchimp_api_key-us1
MAILCHIMP_SERVER_PREFIX=us1
MAILCHIMP_LIST_ID=your_audience_list_id

# -------------------------------------------
# BOT PROTECTION - CLOUDFLARE TURNSTILE (Optional)
# -------------------------------------------
# Get these from: https://dash.cloudflare.com/turnstile
# If not set, bot protection is disabled
TURNSTILE_SITE_KEY=0x4AAAAAAXXXXXXXXXXXXXXX
TURNSTILE_SECRET_KEY=0x4AAAAAAXXXXXXXXXXXXXXX

# -------------------------------------------
# ADMIN & SECURITY
# -------------------------------------------
# API key for admin endpoints (generate a secure random string)
# Used for: /api/admin/orders, /api/admin/newsletter/*, /api/admin/email-stats
ADMIN_API_KEY=your_secure_admin_api_key_here

# Secret for cron job authentication
# Used for: /api/cron/release-ebook, /api/cron/process-emails
CRON_SECRET=your_secure_cron_secret_here

# -------------------------------------------
# EMAIL AUTOMATION CRON SCHEDULE
# -------------------------------------------
# Set up these cron jobs for autonomous email operation:
#
# 1. Process email queue (every 5 minutes):
#    POST /api/cron/process-emails
#    Header: Authorization: Bearer CRON_SECRET
#
# 2. Release pre-orders on launch day:
#    POST /api/cron/release-ebook
#    Header: Authorization: Bearer CRON_SECRET
#
# For Vercel, add to vercel.json:
# {
#   "crons": [
#     { "path": "/api/cron/process-emails", "schedule": "*/5 * * * *" },
#     { "path": "/api/cron/release-ebook", "schedule": "0 16 15 3 *" }
#   ]
# }

# -------------------------------------------
# ANALYTICS (Optional)
# -------------------------------------------
# Google Analytics Measurement ID
GA_MEASUREMENT_ID=G-XXXXXXXXXX

# -------------------------------------------
# DEVELOPMENT
# -------------------------------------------
# Set to 'development' for local testing, 'production' for live
NODE_ENV=development
