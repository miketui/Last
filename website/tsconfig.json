{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "types": ["bun-types", "@types/react", "@types/react-dom"],
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "outDir": "./dist",
    "resolveJsonModule": true,
    "declaration": true,
    "noEmit": true
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}
